{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": ["run", "${file}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "STREAMLIT_SERVER_PORT": "8001"
            },
            "console": "integratedTerminal",
            "stopOnEntry": false
        }
    ]
}
